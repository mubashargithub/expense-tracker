<!-- expense-details.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Expense Details - <%= expense.title %></title>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }
        
        body {
            background-color: #f5f7fa;
            padding: 20px;
            min-height: 100vh;
        }
        
        .container {
            max-width: 800px;
            margin: 0 auto;
            background: white;
            border-radius: 12px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
            overflow: hidden;
        }
        
        .header {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            padding: 25px;
            text-align: center;
        }
        
        .header h1 {
            font-size: 24px;
            font-weight: 600;
            margin-bottom: 5px;
        }
        
        .expense-details {
            padding: 30px;
        }
        
        .detail-row {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 15px 0;
            border-bottom: 1px solid #eee;
        }
        
        .detail-row:last-child {
            border-bottom: none;
        }
        
        .detail-label {
            font-weight: 600;
            color: #555;
            font-size: 16px;
        }
        
        .detail-value {
            font-size: 18px;
            color: #333;
        }
        
        .amount-value {
            font-size: 28px;
            font-weight: bold;
            color: #e74c3c;
        }
        
        .category-value {
            padding: 6px 15px;
            border-radius: 20px;
            font-weight: 500;
            background-color: #e8f4fc;
            color: #2980b9;
        }
        
        .date-value {
            color: #666;
            font-size: 16px;
        }
        
        .back-button {
            display: inline-block;
            margin-top: 25px;
            padding: 12px 25px;
            background-color: #3498db;
            color: white;
            text-decoration: none;
            border-radius: 6px;
            font-weight: 500;
            transition: background-color 0.3s;
        }
        
        .back-button:hover {
            background-color: #2980b9;
        }
        
        .footer {
            text-align: center;
            padding: 20px;
            color: #888;
            font-size: 14px;
        }
        
        @media (max-width: 600px) {
            .container {
                margin: 10px;
            }
            
            .expense-details {
                padding: 20px;
            }
            
            .detail-row {
                flex-direction: column;
                align-items: flex-start;
                gap: 5px;
            }
            
            .amount-value {
                font-size: 24px;
            }
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="header">
            <h1>Expense Details</h1>
            <p>View complete information about your expense</p>
        </div>
        
        <div class="expense-details">
            <div class="detail-row">
                <span class="detail-label">Title:</span>
                <span class="detail-value"><%= expense.title %></span>
            </div>
            
            <div class="detail-row">
                <span class="detail-label">Amount:</span>
                <span class="detail-value amount-value">$<%= expense.amount.toFixed(2) %></span>
            </div>
            
            <div class="detail-row">
                <span class="detail-label">Category:</span>
                <span class="detail-value category-value"><%= expense.category %></span>
            </div>
            
            <div class="detail-row">
                <span class="detail-label">Date:</span>
                <span class="detail-value date-value"><%= new Date(expense.date).toLocaleDateString('en-US', { 
                    weekday: 'long', 
                    year: 'numeric', 
                    month: 'long', 
                    day: 'numeric' 
                }) %></span>
            </div>
            
            <a href="/expense" class="back-button">‚Üê Back to Expenses</a>
        </div>
        
        <div class="footer">
            <p>Expense ID: <%= expense.id || 'N/A' %></p>
            <p>Last updated: <%= new Date().toLocaleDateString() %></p>
        </div>
    </div>
</body>
</html>